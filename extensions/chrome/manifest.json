{
    "name": "Gistbender",
    "description": "This extension allows the user to try Arduino sketches found on a website",
    "version": "1.0",

    "permissions": [
        "activeTab"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "content_scripts": [{
        "matches": [
            "<all_urls>"
        ],
        "js": ["jquery-1.11.3.min.js", "compilerflasher.js", "content.js"]
    }],
    "web_accessible_resources": ["style.css"],
    "browser_action": {
        "default_icon": "logo.png",
        "default_popup": "popup.html",
        "default_title": "Scan page for a sketch!"
    },
    "manifest_version": 2
}
